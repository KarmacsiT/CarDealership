<Window x:Class="CarDealershipDB.WpfClient.AddOrEditDepartmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarDealershipDB.WpfClient"
        mc:Ignorable="d"
        Title="AddOrEditDepartmentDialog" Height="450" Width="800">
    <Grid>
        <Label Content="Department Specification Sheet" HorizontalAlignment="Center" Margin="0,23,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Department Name:" HorizontalAlignment="Left" Margin="259,85,0,0" VerticalAlignment="Top"/>
        <Label Content="Address:" HorizontalAlignment="Left" Margin="260,116,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="DepartmentNameTextbox" HorizontalAlignment="Left" Margin="400,89,0,0" Text="Name of Department" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <TextBox x:Name="AddressTextBox" HorizontalAlignment="Left" Margin="400,120,0,0" Text="Address of Department" TextWrapping="Wrap" VerticalAlignment="Top" Width="163"/>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ConfirmButton_Click" Height="27" Width="136" Margin="0,163,0,0"/>
    </Grid>
</Window>
